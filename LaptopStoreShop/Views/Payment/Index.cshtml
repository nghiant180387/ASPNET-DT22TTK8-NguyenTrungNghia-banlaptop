@model List<CartItem>

@{
	ViewData["Title"] = "Payment";
}

<div id="breadcrumb" class="section">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<h3 class="breadcrumb-header">Thanh toán</h3>
				<ul class="breadcrumb-tree">
					<li><a href="#">Trang chủ</a></li>
					<li class="active">Thanh toán</li>
				</ul>
			</div>
		</div>
	</div>
</div>

<div class="section">
	<div class="container">
		<div class="row">
			<div class="col-md-7">
				<div class="billing-details">
					<div class="section-title">
						<h3 class="title">Thông tin thanh toán</h3>
					</div>
					<div class="form-group">
						<input class="input" type="text" name="name" placeholder="Họ và tên">
					</div>
					<div class="form-group">
						<input class="input" type="email" name="email" placeholder="Email">
					</div>
					<div class="form-group">
						<input class="input" type="text" name="address" placeholder="Địa chỉ">
					</div>
					<div class="form-group">
						<input class="input" type="tel" name="phone" placeholder="Số điện thoại">
					</div>
				</div>
			</div>

			<div class="col-md-5 order-details">
				<div class="section-title text-center">
					<h3 class="title">Thông tin đơn hàng</h3>
				</div>
				<div class="order-summary">
					<div class="order-col">
						<div><strong>Sản phẩm</strong></div>
						<div><strong>Giá tiền</strong></div>
					</div>

					<div class="order-products">
						@foreach (var item in Model)
						{
							<div class="order-col">
								<img src="@item.ImageUrl" alt="@item.Name" style="width: 80px; height: 80px" />
								<div>@item.Quantity x @item.Name</div>
								<div>@item.Price VNĐ</div>
							</div>
						}
					</div>

					<div class="order-col">
						<div><strong>Tổng tiền</strong></div>
						<div><strong class="order-total">@Model.Sum(x => x.Quantity * x.Price) VNĐ</strong></div>
					</div>
				</div>

				<div class="payment-method">
					<div style="margin-bottom: 10px"><strong>Phương thức thanh toán</strong></div>
					<div class="input-radio">
						<input type="radio" name="payment" id="payment-1">
						<label for="payment-1">
							<span></span>
							Thanh toán VNPay
						</label>
						<div class="caption">
							<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit.</p>
						</div>
					</div>
					<div class="input-radio">
						<input type="radio" name="payment" id="payment-2">
						<label for="payment-2">
							<span></span>
							Thanh toán Momo
						</label>
						<div class="caption">
							<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit.</p>
						</div>
					</div>
				</div>
				<a href="#" class="primary-btn order-submit">Thanh toán</a>
			</div>
		</div>
	</div>
</div>
