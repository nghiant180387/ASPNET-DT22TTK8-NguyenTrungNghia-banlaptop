@{
    ViewData["Title"] = "Trang chủ";
}
@model List<LaptopStoreShop.Models.Laptop>
<div class="section">
	<div class="container">
		<div class="row">
			<div class="col-md-4 col-xs-6">
				<div class="shop">
					<div class="shop-img">
						<img src="~/assets/img/shop01.png" alt="">
					</div>
					<div class="shop-body">
						<h3>Laptop<br>Gaming</h3>
						<a href="#" class="cta-btn">Xem thêm <i class="fa fa-arrow-circle-right"></i></a>
					</div>
				</div>
			</div>
			<div class="col-md-4 col-xs-6">
				<div class="shop">
					<div class="shop-img">
						<img src="~/assets/img/shop03.png" alt="">
					</div>
					<div class="shop-body">
						<h3>Laptop<br>Văn phòng</h3>
						<a href="#" class="cta-btn">Xem thêm <i class="fa fa-arrow-circle-right"></i></a>
					</div>
				</div>
			</div>
			<div class="col-md-4 col-xs-6">
				<div class="shop">
					<div class="shop-img">
						<img src="~/assets/img/shop02.png" alt="">
					</div>
					<div class="shop-body">
						<h3>Laptop<br>Đồ họa</h3>
						<a href="#" class="cta-btn">Xem thêm <i class="fa fa-arrow-circle-right"></i></a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="section">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="section-title">
					<h3 class="title">Sản phẩm mới</h3>
					<div class="section-nav">
						<ul class="section-tab-nav tab-nav">
							<li class="active"><a data-toggle="tab" href="#tab1">Laptop</a></li>
						</ul>
					</div>
				</div>
			</div>
			<div class="col-md-12">
				<div class="row">
					<div class="products-tabs">
						<div id="tab1" class="tab-pane active">
							<div class="products-slick" data-nav="#slick-nav-1">
								@foreach (var item in Model)
								{
									<div class="col-md-4 col-xs-6">
										<form id="addToCartForm" asp-controller="Payment" asp-action="AddToCart" method="post">
											<input type="hidden" name="id" value="@item.Id">
											<input type="hidden" name="name" value="@item.Name">
											<input type="hidden" name="price" value="@item.Price.ToString("N0")">
											<input type="hidden" name="stock" value="@item.Stock">
											<input type="hidden" name="imageUrl" value="@item.LaptopImages.FirstOrDefault()?.ImageUrl">
											<input type="hidden" name="qty" value="1" />
											<div class="product">
												<div class="product-img">
													<img src="@((item.LaptopImages?.FirstOrDefault()?.ImageUrl) ?? "~/assets/img/product01.png")"
														 alt="@item.Name"
														 style="width: 263px; height: 263px">
													<div class="product-label">
														<span class="sale">-30%</span>
														<span class="new">Mới</span>
													</div>
												</div>
												<div class="product-body">
													<p class="product-category">@item.Category.CategoryName</p>
													<h3 class="product-name"><a href="#">@item.Name</a></h3>
													<h4 class="product-price">@item.Price.ToString("N0") VNĐ </h4>
													<div class="product-rating">
														<i class="fa fa-star"></i>
														<i class="fa fa-star"></i>
														<i class="fa fa-star"></i>
														<i class="fa fa-star"></i>
														<i class="fa fa-star"></i>
													</div>
													<div class="product-btns">
														<a asp-controller="Product" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-primary d-flex align-items-center gap-2">
															<i class="fa fa-eye"></i> Xem thông tin
														</a>
													</div>
												</div>
												<div class="add-to-cart">
													<button type="submit" class="add-to-cart-btn"><i class="fa fa-shopping-cart"></i> thêm giỏ hàng</button>
												</div>
											</div>
										</form>
									</div>
								}
							</div>
							<div id="slick-nav-1" class="products-slick-nav"></div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<div id="hot-deal" class="section">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="hot-deal">
					<ul class="hot-deal-countdown">
						<li>
							<div>
								<h3>02</h3>
								<span>Ngày</span>
							</div>
						</li>
						<li>
							<div>
								<h3>10</h3>
								<span>Tiếng</span>
							</div>
						</li>
						<li>
							<div>
								<h3>34</h3>
								<span>Phút</span>
							</div>
						</li>
						<li>
							<div>
								<h3>60</h3>
								<span>Giây</span>
							</div>
						</li>
					</ul>
					<h2 class="text-uppercase">Khuyến mãi cuối tuần</h2>
					<p>Mua laptop Gaming tặng ngay tai nghe xịn!</p>
					<a class="primary-btn cta-btn" href="#">Xem ngay</a>
				</div>
			</div>
		</div>
	</div>
</div>