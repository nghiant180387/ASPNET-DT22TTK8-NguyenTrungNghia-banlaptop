@using LaptopStoreShop.Extensions
@{
	var cart = Context.Session.GetString("cart");
	var cartItems = string.IsNullOrEmpty(cart) ? new List<CartItem>() : Newtonsoft.Json.JsonConvert.DeserializeObject<List<CartItem>>(cart);
}
<style>
	.dropdown {
		position: relative;
		display: inline-block;
	}

	.dropdown-togglee {
		background-color: #3498db;
		color: white;
		padding: 10px 15px;
		border: none;
		cursor: pointer;
		border-radius: 5px;
	}

	.dropdown-menu {
		display: none;
		position: absolute;
		top: 100%;
		left: 0;
		background-color: white;
		min-width: 160px;
		border-radius: 5px;
		box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
		z-index: 10;
	}

		.dropdown-menu a {
			display: block;
			padding: 10px;
			text-decoration: none;
			color: #333;
			transition: background 0.3s;
		}

			.dropdown-menu a:hover {
				background-color: #f1f1f1;
			}
</style>
<header>
	<!-- TOP HEADER -->
	<div id="top-header">
		<div class="container">
			<ul class="header-links pull-left">
				<li><a href="#"><i class="fa fa-phone"></i> 0599.123.456</a></li>
				<li><a href="#"><i class="fa fa-envelope-o"></i> laptopstore@email.com</a></li>
				<li><a href="#"><i class="fa fa-map-marker"></i> Hà Nội, TP.Hồ Chí Minh</a></li>
			</ul>
			<ul class="header-links pull-right">
				<li><a href="#"><i class="fa fa-dollar"></i> VNĐ</a></li>
				@if (Context.Session.GetString("Name") != null)
				{
					<li class="dropdown">
						<a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">
							<i class="fa fa-user-o"></i> Xin chào, @Context.Session.GetString("Name")
						</a>
						<div class="cart-dropdown">
							<button class="btn btn-success">
								Trang cá nhân
							</button>

							<a class="btn btn-success" asp-controller="Login" asp-action="Logout">
								Đăng xuất
							</a>
						</div>
					</li>
				}
				else
				{
					<li><a asp-controller="Login" asp-action="Index"><i class="fa fa-user-o"></i> Đăng nhập</a></li>
				}
				
			</ul>
		</div>
	</div>
	<div id="header">
		<div class="container">
			<div class="row">
				<div class="col-md-3">
					<div class="header-logo">
						<a asp-controller="Home" asp-action="Index" class="logo">
							<h1 style="color: white; padding-top:20px">Laptop Store</h1>
						</a>
					</div>
				</div>
				
				<div class="col-md-6">
					<div class="header-search">
						<form style="display:flex">
							<select class="input-select">
								<option value="0">Tất cả sản phẩm</option>
								<option value="1">Asus</option>
								<option value="1">DELL</option>
							</select>
							<input class="input" placeholder="Nhập từ khóa">
							<button class="search-btn">Tìm</button>
						</form>
					</div>
				</div>

				<div class="col-md-3 clearfix">
					<div class="header-ctn">
						@if (Context.Session.GetString("cart") == null)
						{
							<div class="dropdown">
								<a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">
									<i class="fa fa-shopping-cart"></i>
									<span>Giỏ hàng</span>
									<div class="qty">0</div>
								</a>
								<div class="cart-dropdown">
									<div class="cart-list">
									</div>
									<div class="cart-summary">
										<small>0 sản phẩm</small>
										<h5>Tổng: 0 VNĐ</h5>
									</div>
								</div>
							</div>
						}
						else
						{
							<div class="dropdown">
								<a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">
									<i class="fa fa-shopping-cart"></i>
									<span>Giỏ hàng</span>
									<div class="qty">@cartItems.Sum(c => c.Quantity)</div>
								</a>
								<div class="cart-dropdown">
									<div class="cart-list">
											@foreach (var item in cartItems)
											{
											<div class="product-widget">
												<div class="product-img">
													<img src="@item.ImageUrl" alt="">
												</div>
												<div class="product-body">
													<h3 class="product-name"><a href="#">@item.Name</a></h3>
													<h4 class="product-price"><span class="qty">@item.Quantity</span>@item.Price VNĐ</h4>
												</div>
												<button class="delete"><i class="fa fa-close"></i></button>
											</div>
										}
									</div>
									<div class="cart-summary">
										<small>3 sản phẩm</small>
										<h5>Tổng: 2940 VNĐ</h5>
									</div>
									<div class="cart-btns">
										<a href="#">Xem giỏ hàng</a>
										<a href="#">Thanh toán  <i class="fa fa-arrow-circle-right"></i></a>
									</div>
								</div>
								
							</div>
						}
							
						<div class="menu-toggle">
							<a href="#">
								<i class="fa fa-bars"></i>
								<span>Menu</span>
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</header>

<nav id="navigation">
	<div class="container">
		<div id="responsive-nav">
			<ul class="main-nav nav navbar-nav">
				<li class="active"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
				<li><a asp-controller="Product" asp-action="Index">Laptop</a></li>
				<li><a asp-controller="Category" asp-action="Index">Thương hiệu</a></li>
				<li><a asp-controller="Home" asp-action="Index">Thể loại</a></li>
				<li><a asp-controller="Blog" asp-action="Index">Bài viết</a></li>
				<li><a asp-controller="Contact" asp-action="Index">Liên hệ</a></li>
			</ul>
		</div>
	</div>
</nav>
<script>
	var cartItems = @Html.Raw(Json.Serialize(cartItems));
	console.log("Cart Items:", cartItems);
</script>
<script>
	document.addEventListener("DOMContentLoaded", function () {
		let dropdownBtn = document.getElementById("dropdownBtn");
		let dropdownMenu = document.getElementById("dropdownMenu");

		dropdownBtn.addEventListener("click", function () {
			dropdownMenu.style.display = dropdownMenu.style.display === "block" ? "none" : "block";
		});

		// Đóng dropdown khi click ra ngoài
		document.addEventListener("click", function (event) {
			if (!dropdownBtn.contains(event.target) && !dropdownMenu.contains(event.target)) {
				dropdownMenu.style.display = "none";
			}
		});
	});
</script>
