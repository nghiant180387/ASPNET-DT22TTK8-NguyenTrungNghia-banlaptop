@{
	ViewData["Title"] = "Login";
}
<div id="breadcrumb" class="section">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<h3 class="breadcrumb-header"><a href="/">Quay về trang chủ</a></h3>
			</div>
		</div>
	</div>
</div>
<div class="section">
	<div class="container">
		<div class="row" style="display: flex; justify-content: center; align-items: center;">
			<form method="post" asp-action="Login" class="col-md-8 order-details">
				<div class="section-title text-center">
					<h3 class="title">Đăng nhập</h3>
				</div>
				<div class="order-summary">					
					<label for="username" style="padding-left: 0px"> Email đăng nhập</label>
					<div class="form-group">
						<input class="input" type="email" name="email" placeholder="Nhập email">
					</div>
					<div class="form-group">
						<label for="password" style="padding-left: 0px"> Mật khẩu</label>
						<input class="input" type="password" name="password" placeholder="Nhập mật khẩu">
					</div>
				</div>				
				<div class="input-checkbox">					
					<label for="terms" style="padding-left: 0px"> Bạn chưa có tài khoản? <a asp-action="Register">Đăng kí ngay!</a> </label>
				</div>
				<button type="submit" class="primary-btn order-submit" style="max-width: 200px; margin: auto; margin-top: 30px;">Đăng nhập</button>
				<div class="input-checkbox text-center" style="padding: 15px">
					<a href="#">Quên mật khẩu!</a>
				</div>
			</form>
		</div>
	</div>
</div>