@model LaptopStoreShop.Models.Laptop

@{
    ViewData["Title"] = "Thêm Laptop Mới";
}

<h2 class="mb-4">Thêm Laptop Mới</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Tên Laptop</label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="BrandId" class="form-label">Thương hiệu</label>
        <select asp-for="BrandId" asp-items="ViewBag.Brands" class="form-control" required>
            <option value="">-- Chọn thương hiệu --</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="CategoryId" class="form-label">Loại</label>
        <select asp-for="CategoryId" asp-items="ViewBag.Category" class="form-control" required>
            <option value="">-- Chọn loại --</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label">Giá</label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" required />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Stock" class="form-label">Số lượng</label>
        <input asp-for="Stock" type="number" class="form-control" required />
        <span asp-validation-for="Stock" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label">Mô tả</label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
    </div>

    <div class="mb-3">
        <label class="form-label">Hình ảnh</label>
        <input type="file" id="imageUpload" name="images" multiple class="form-control py-2 my-2" accept="image/*" />
        <div id="imagePreview" class="my-2 d-flex flex-wrap"></div>
    </div>

    <button type="submit" class="btn btn-primary">Thêm Laptop</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
